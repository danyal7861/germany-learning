<%- include('./partials/header') %> <!-- Include the common header partial -->

<div class="wrapper">
    <div class="container mt-5">
        <h1 class="display-4 mb-4">Our Green Energy Solutions</h1> <!-- Main page title -->

        <!-- Responsive grid for energy categories -->
        <div class="row row-cols-1 row-cols-md-3 g-4"> <!-- 1 column on mobile, 3 on medium+ screens -->
            <% categories.forEach(category => { %> <!-- Loop through each category in the passed array -->
                <div class="col">
                    <div class="card h-100 shadow-sm"> <!-- Card with full height and soft shadow -->
                        <img src="<%= category.image %>" class="card-img-top" alt="<%= category.name %>"> <!-- Category image -->
                        <div class="card-body">
                            <h3 class="card-title"><%= category.name %></h3> <!-- Category name -->
                            <p class="card-text"><%= category.description %></p> <!-- Short description -->
                            <a href="/products/<%= category.id %>" class="btn btn-success"> <!-- Dynamic link to category page -->
                                Learn More <i class="fas fa-arrow-right ms-2"></i> <!-- Font Awesome icon with left margin -->
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %> <!-- End of categories loop -->
        </div>
    </div>
</div>

<%- include('./partials/footer') %> <!-- Include the common footer partial -->
