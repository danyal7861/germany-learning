<!-- Hero Section -->
<div class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <!-- Left Column: Hero Content -->
            <div class="col-lg-6">
                <h1 class="display-4">Powering a Greener Future with Sustainable Energy Solutions</h1> <!-- Main headline -->
                <p class="lead">At Rolsa Technologies, we are dedicated to delivering sustainable energy solutions that help you save money while reducing your carbon footprint and building a greener future.</p> <!-- Supporting text -->
                
                <!-- Buttons for exploring solutions and scheduling a consultation -->
                <div class="d-flex gap-3 mb-4">
